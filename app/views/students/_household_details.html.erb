<center><h2>Households</h2>

<br>

<table class="table">
  <thead>
    <tr>
      <th>Street</th>
      <th>Zip Code</th>
      <th>County</th>
      <th>Home phone</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @household.street %></td>
        <td><%= @household.zip %></td>
        <td><%= @household.county %></td>
        <td><%= number_to_phone @household.home_phone %></td>
        <td><%= link_to(image_tag('edit.png'), edit_household_path(@household)) %></td>
        <td><%= link_to(image_tag('delete.png'), @household, method: :delete, data: { confirm: 'Are you sure?' }) %></td> 
      </tr>
  </tbody>
</table>