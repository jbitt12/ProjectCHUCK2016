


<div class="container well">
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
<center>
      <h2>Assign a Coach to the <%= @team.name.pluralize %></h2>
      <br><br>
    <% if @coaches.to_a.length == 0 %>
      No Available Coaches
    <% else %>
<table class="table">
  <thead>
    <tr>
      <th>Coach</th>
      <th>Role</th>
      <th>Assign to Team?</th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.name %></td>
        <td><%= coach.role %></td>
        <td><%= link_to "Assign?", send_assign_coach_path(@team,coach) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
      </center>
    </div>
    <div class="col-sm-2">
    </div>
  </div>
</div>
<div class = "row">
  <div class="actions">
    <div class="col-sm-1">
      <%# f.submit "Create", :class => 'btn btn-primary' %>
    </div>
    <div class="col-sm-10">
      <%= link_to 'Back', team_path(@team), :class => 'btn btn-primary' %>
    </div>
  </div>
