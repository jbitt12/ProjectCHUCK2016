

<div class="container well">
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
<center>
      <h2>Assign a Student to the <%= @team.name.pluralize %></h2>
      <br><br>
    <% if @team.eligible_students.blank? %>
      No Available Students
    <% else %>
<table class="table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Assign to Team?</th>
    </tr>
  </thead>

  <tbody>
    <% @team.eligible_students.each do |stu| %>
      <tr>
        <td><%= stu.name %></td>
        <td><%= link_to "Assign?", send_assign_student_path(@team,stu) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
      </center>
    </div>
    <div class="col-sm-2">
    </div>
  </div>
</div>
<div class = "row">
  <div class="actions">
    <div class="col-sm-1">
      <%# f.submit "Create", :class => 'btn btn-primary' %>
    </div>
    <div class="col-sm-10">
      <%= link_to 'Back', team_path(@team), :class => 'btn btn-primary' %>
    </div>
  </div>
