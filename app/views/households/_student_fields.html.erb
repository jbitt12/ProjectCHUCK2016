<!DOCTYPE HTML>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
    </div>
    <div class="col-xs-12 col-sm-4">
    <%= f.link_to_remove("X Remove student", :class => "btn removelink") %> <br>
  </div>
  </div>
  
  <h3>Student Participant Information</h3>

  <br>

  <div class="row">
    <div class="col-xs-6 col-sm-6">
      <%#= f.input :first_name, :class => 'input-lg' %>
      <div class="field">
        <%= f.label :first_name %> <br>
        <%= f.text_field :first_name, :class => "input-lg required" %>
      </div> 
    </div>
    <div class="col-xs-6 col-sm-6">
      <div class="field">
        <%= f.label :last_name %> <br>
        <%= f.text_field :last_name, :class => "input-lg required" %>
      </div>
    </div>
  </div>

  <br>

  <div class ="row">
    <div class="col-xs-6 col-sm-6">
      <div class="field">
        <%= f.label :gender %> <br>
        <%= f.input_field :gender, collection: Student::GENDER_ARRAY, prompt: "Please Select..." %>
      </div>
    </div>
    <div class="col-xs-4 col-sm-4">
      <div class="field">
        <%= f.label :dob, :label => "Date of Birth" %> <br>
        <%= f.date_select :dob, as: :date, :order =>[:month, :day, :year], :start_year => 20.years.ago.year, :end_year => 5.years.ago.year %>
      </div>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-xs-6 col-sm-6">
      <div class="field">
        <%= f.label :cell_phone, :label => "Participant's Cell Phone" %><br>
        <%= f.text_field :cell_phone, as: :string, :class => "input-lg" %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-6">
      <div class="field">
        <%= f.label :email, :label => "Participant's Email" %><br>
        <%= f.text_field :email, as: :string, :class => "input-lg email" %>
      </div>
    </div>
  </div>

  <br> 

  <div class="row">
    <div class="col-xs-6 col-sm-6">
      <div class="field">
        <%= f.label :pastparticipation, :label => "Please indicate number of years you have participated in Project CHUCK. If none, please enter 0." %><br>
        <%= f.input_field :pastparticipation, collection: Student::PROJECTCHUCK_YEARS, prompt: "Please Select..." %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-6">
      <div class="field">
        <%= f.label :jersey_size %> <br>
        <%= f.input_field :jersey_size, collection: Student::JERSEYSIZES, prompt: "Please Select..." %>
      </div>
    </div>
  </div>

  <br>

  <div class ="row">
    <div class="col-xs-3 col-sm-3">
      <div class="field">
        <%= f.label :facebook %> <br>
        <%= f.text_field :facebook, :class => "input-lg", :placeholder => "facebook.com/________" %>
      </div>
    </div>
    <div class="col-xs-3 col-sm-3">
      <div class="field">
        <%= f.label :twitter %> <br>
        <%= f.text_field :twitter, :class => "input-lg", :placeholder => "@__________" %>
      </div>
    </div>
    <div class="col-xs-3 col-sm-3">
      <div class="field">
        <%= f.label :instagram %> <br>
        <%= f.text_field :instagram, :class => "input-lg", :placeholder => "@__________" %>
      </div>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-xs-6 col-sm-6">
      <div class="field">
        <%= f.label :birth_certificate, :label => "Birth Certificate" %> <br>
        <% if f.object.birth_certificate? %>
        File has already been selected. To reupload, click the button below:
        <%= f.file_field :birth_certificate %>
        <% else %>
        <%= f.file_field :birth_certificate, :label => "foo" %>
        <%= f.hidden_field :birth_certificate_cache %>
        <% end %>
      </div>
    </div> 
  </div>

  <br><hr>

  <h3>School Information</h3>

  <div class="row">
   <div class="col-xs-6 col-sm-6">
    <div class="field">
      <%= f.label :school, :label => "Name of School" %><br>
      <%= f.text_field :school, :class => "input-lg" %>
    </div>
  </div>
  <div class="col-xs-6 col-sm-6">
   <div class="field">
     <%= f.label :grade, :label => "Grade as of September, #{Time.now.year}" %> <br>
     <%= f.input_field :grade, collection: Student::GRADESWITHK_ARRAY, prompt: "Please Select..." %>
   </div>
 </div>
</div>

<br>

<div class="row">
 <div class="col-xs-6 col-sm-6">
  <div class="field">
    <%= f.label :district, :label => "School District" %><br>
    <%= f.input_field :district, collection: School::DISTRICT_ARRAY, prompt: "Please Select..." %>
  </div>
</div>
<div class="col-xs-6 col-sm-6">
  <div class="field">
    <%= f.label :gpa, :label => "GPA" %><br>
    <%= f.input_field :gpa, collection: Student::GPA_ARRAY, prompt: "Please Select..." %>
  </div>
</div>
</div>

<br>

<div class="row">
  <div class="col-xs-6 col-sm-6">
    <div class="field">
      <%= f.label :report_card, :label => "Report Card" %> <br>
      <% if f.object.report_card? %>
      File has already been selected. To reupload, click the button below:
      <%= f.file_field :report_card %>
      <% else %>
      <%= f.file_field :report_card, :label => "foo" %>
      <%= f.hidden_field :report_card_cache %>
      <% end %>
    </div>
  </div> 
</div>

<br><hr>

<h3>Participant Insurance Information</h3>

<div class ="row">
  <div class="col-xs-6 col-sm-6">
    <div class="field">
      <%= f.label :insurance_provider, :label => "Name of Insurance Company" %> <br>
      <%= f.text_field :insurance_provider, :class => "input-lg required" %>
    </div>
  </div>
  <div class="col-xs-6 col-sm-6">
    <div class="field">
      <%= f.label :insurance_policy_no, :label => "Policy Number" %><br>
      <%= f.text_field :insurance_policy_no, :class => "input-lg required" %>
    </div>
  </div>
</div>

<br>

<div class ="row">
  <div class="col-xs-6 col-sm-6">
    <div class="field">
      <%= f.label :proof_of_insurance, :label => "Proof of Insurance" %> <br>
      <% if f.object.proof_of_insurance? %>
      File has already been selected. To reupload, click the button below:
      <%= f.file_field :proof_of_insurance %>
      <% else %>
      <%= f.file_field :proof_of_insurance, :label => "foo" %>
      <%= f.hidden_field :proof_of_insurance_cache %>
      <% end %>
    </div>
  </div> 
</div>

<br> <hr>

<h3>Participant Medical Information</h3>

<div class="row">
 <div class="col-xs-6 col-sm-6">
   <div class="field">
    <%= f.label :family_physician %><br>
    <%= f.text_field :family_physician, :class => "input-lg required" %>
  </div>
</div>
<div class="col-xs-6 col-sm-6">
  <div class="field">
    <%= f.label :physician_phone %><br>
    <%= f.input_field :physician_phone, as: :string, :class => "input-lg phone" %>
  </div>
</div>
</div>

<br>

<div class="row">
  <div class="col-xs-6 col-sm-6">
    <div class="field">
      <%= f.label :physical, :label => "Physical" %> <br>
      <% if f.object.physical? %>
      File has already been selected. To reupload, click the button below:
      <%= f.file_field :physical %>
      <% else %>
      <%= f.file_field :physical, :label => "foo" %>
      <%= f.hidden_field :physical_cache %>
      <% end %>
    </div>
  </div> 
  <div class="col-xs-4 col-sm-4">
    <div class="field">
      <%= f.label :physical_date %><br>
