<div class="container well">
  <center><h2>Volunteers</h2>
    <%= link_to 'New Volunteer', new_volunteer_path %></center>
    <br>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Team</th>
          <th>Email</th>
          <th>Cell phone</th>
          <th>Receives text messages?</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @volunteers.each do |volunteer| %>
        <tr>
          <td><%= link_to volunteer.proper_name, volunteer %></td>
          <td>
            <% if volunteer.team.nil? %> 
              Not Assigned
            <% else %>
              <%= volunteer.team.name %>
            <% end %>
          </td>
            <td><%= volunteer.email %></td>
            <td><%= volunteer.cell_phone %></td>
            <td>
              <% if volunteer.receives_text_msgs==true %>
              <%=link_to image_tag("check16.png")%>
              <% else %>
              <%=link_to image_tag("missing16.png")%>
              <% end %></td>
              <td><%= link_to(image_tag('edit.png'), edit_volunteer_path(volunteer)) %></td>
              <td><%= link_to(image_tag('delete.png'), volunteer, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <span class="paginate">
          <%= will_paginate @volunteers, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
        </span>

      </div>