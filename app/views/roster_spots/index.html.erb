<div class="container well">
<center><h1>Roster Spots</h1>
<%= link_to 'New Roster Spot', new_roster_spot_path %></center>
<br>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Team</th>
      <th>Student</th>
      <th>Jersey Number</th>
      <th>Active</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @roster_spots.each do |roster_spot| %>
      <tr>
        <td><%= link_to(image_tag('expand24.png'), roster_spot) %></td>
        <td><%= link_to roster_spot.team.name, roster_spot.team %></td>
        <td><%= link_to roster_spot.student.proper_name, roster_spot.student %></td>
        <td><%= roster_spot.jersey_number %></td>
        <td>
          <% if roster_spot.active? == true %>
            <%=link_to image_tag("check16.png")%>
          <% else %>
            <%=link_to image_tag("missing16.png")%>
          <% end %></td>
        <td><%= link_to(image_tag('edit.png'), edit_roster_spot_path(roster_spot)) %></td>
        <td><%= link_to(image_tag('delete.png'), roster_spot, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
<%= will_paginate @roster_spots, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

</div>