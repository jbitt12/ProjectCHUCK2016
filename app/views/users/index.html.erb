<div class="container well">
<center><h2>Users</h2>
<%= link_to 'New User', new_user_path %></center>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.role.capitalize %></td>
        <td><%= link_to(image_tag('edit.png'), edit_user_path(user)) %></td>
        <td><%= link_to(image_tag('delete.png'), user, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
<%= will_paginate @users, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

</div>